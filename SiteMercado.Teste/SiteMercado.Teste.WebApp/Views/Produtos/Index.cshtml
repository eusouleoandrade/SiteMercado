@model IEnumerable<SiteMercado.Teste.Application.DTOs.Produto.ProdutoViewModel>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("SiteMercado", "Index", "Home")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-new-window"></i> Novo produto</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Imagem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th class="text-right">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/uploads/@item.Imagem" class="img-thumbnail" height="60" width="60" asp-append-version="true" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a class="btn-white btn btn-xs" href="/Produtos/Edit/@item.Id"><i class="glyphicon glyphicon-edit"></i> Editar</a>
                                            <a class="btn-white btn btn-xs" href="/Produtos/Details/@item.Id"><i class="glyphicon glyphicon-book"></i> Detalhar</a>
                                            <a class="btn-white btn btn-xs" href="/Produtos/Delete/@item.Id"><i class="glyphicon glyphicon-remove"></i> Deletar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
}

@section StyleBefore{
    <link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />
}

@section ScriptPage{
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/custom/setDataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setDataTable();
        });
    </script>
}