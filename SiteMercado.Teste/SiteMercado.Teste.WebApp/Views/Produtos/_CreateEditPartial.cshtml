@model SiteMercado.Teste.Application.DTOs.Produto.ProdutoViewModel

<div class="panel-body">
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label col-md-1"></label>
            <div class="col-md-11">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Valor" class="control-label col-md-1"></label>
            <div class="col-md-11">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-money"></i></span>
                    <input asp-for="Valor" class="form-control" placeholder="Valor" />
                </div>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Imagem" class="control-label col-md-1"></label>
            <div class="col-md-11">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-file-picture-o"></i></span>
                    <input asp-for="File" type="file" class="form-control custom-file-input" placeholder="Imagem" />
                </div>
                @if (Model?.ImagemExistente != null)
                {
                    <div id="img-produto">
                        <img src="~/uploads/@Model.ImagemExistente" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
                    </div>
                }
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>