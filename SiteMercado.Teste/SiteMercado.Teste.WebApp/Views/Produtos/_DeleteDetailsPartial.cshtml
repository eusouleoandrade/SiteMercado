@model SiteMercado.Teste.Application.DTOs.Produto.ProdutoViewModel

<div class="panel-body">
    <div class="form-horizontal">
        <input type="hidden" asp-for="ImagemExistente" />
        <input type="hidden" asp-for="Imagem" />
        <div class="form-group">
            <label asp-for="Id" class="control-label col-md-1"></label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label col-md-1"></label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Valor" class="control-label col-md-1"></label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Imagem" class="control-label col-md-1"></label>
            <div class="col-md-11">
                @if (Model.ImagemExistente != null)
                {
                    <img src="~/Uploads/@Model.ImagemExistente" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
                }
                else
                {
                    <div>Imagem não cadastrada.</div>
                }
            </div>
        </div>
    </div>
</div>