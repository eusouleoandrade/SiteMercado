@model SiteMercado.Teste.Application.DTOs.Produto.ProdutoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("SiteMercado", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Produtos", "Index", "Produtos")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="wrapper wrapper-content animated fadeInDown">
        <div class="panel panel-primary">
            @Html.HiddenFor(m => m.Id)
            <partial name="~/Views/Produtos/_CreateEditPartial.cshtml" , model="Model" />
            <div class="panel-footer panel-info">
                <div class="row">
                    <div class="col-md-offset-1 col-md-11">
                        @Html.HiddenFor(model => model.ImagemExistente)
                        <a asp-action="Index" class="btn btn-white">Voltar para lista</a>
                        <button type="submit" class="ladda-button btn btn-primary" data-style="zoom-in">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section ScriptPage {
    <script type="text/javascript">
        $("input[type=file]").change(function () {
            document.getElementById('img-produto').innerHTML = "";
        })
    </script>
}